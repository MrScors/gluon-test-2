<?xml version="1.0" encoding="UTF-8"?>


<?import com.gluonhq.charm.glisten.mvc.View?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.CheckBox?>
<View fx:id="edition" xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gluonhq.samples.notes.views.EditHivePresenter">
   <center>
      <VBox prefHeight="200.0" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <CheckBox fx:id="aliveFlag" text="Alive"/>
            <TextField fx:id="boxes" promptText="%title.prompt" styleClass="light" prefWidth="10.0"/>
            <HBox alignment="TOP_RIGHT" prefHeight="55.0" spacing="5.0" styleClass="top-box">
               <children>
                  <Button id="cancel-button" fx:id="cancel" mnemonicParsing="false" text="%button.cancel.text" styleClass="light, flat" />
                  <Button id="submit-button" fx:id="submit" defaultButton="true" mnemonicParsing="false" text="%button.submit.text" styleClass="light, flat" />
               </children>
               <padding>
                  <Insets left="5.0" right="5.0" />
               </padding>
            </HBox>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </center>
</View>
